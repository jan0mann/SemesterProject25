<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HPO.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1200"
        x:Class="HPO.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="HPO"
        WindowState="Maximized">

 <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

<DockPanel LastChildFill="True">
    <Border Height="60" Background="SkyBlue" BorderBrush="Black" DockPanel.Dock="Top">
    <TextBlock Foreground="Black">Dock = "Top"</TextBlock>
    </Border>

    <Border Height="40" Background="LemonChiffon" BorderBrush="Black" DockPanel.Dock="Bottom">
    <TextBlock Foreground="Black">Powered By Danfoss Drive</TextBlock>   
    </Border>

    <Border Width="220" Background="Red" BorderBrush="Black" DockPanel.Dock="Left">
    <StackPanel>
    <MenuItem  Header="Main Page" HorizontalAlignment="Stretch" Command="{Binding NavigateToFirstView}"/>
    <MenuItem Header="View Boiler Information" HorizontalAlignment="Stretch" Command="{Binding NavigateToBoilerInfo}"/>
    <MenuItem Header="View Heat Demand" HorizontalAlignment="Stretch" Command="{Binding NavigateToHeatDemand}"/>
    </StackPanel>
    </Border>


    <Border Background="White" BorderBrush="Black">
    
    </Border>
    <ContentControl Content="{Binding CurrentView}" />
</DockPanel>
</Window>
